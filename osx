# Configuration for OSX

# Alias for vi
alias vi=/usr/local/bin/vim

# If docker toolbox is installed and running, load up the env vars
if [[ -e /usr/local/bin/docker-machine ]]
then
  if [[ `/usr/local/bin/docker-machine status default` == 'Running' ]]
  then
    eval "$(/usr/local/bin/docker-machine env default)"
  fi
fi

