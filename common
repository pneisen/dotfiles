# Configuration shared with all hosts.

# Golang GOPATH. Need this before the path.
export GOPATH="$HOME/projects/golang"

PATH="$HOME/.cabal/bin:$HOME/.rvm/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/local/go/bin:$HOME/bin:$GOPATH/bin:$HOME/.cargo/bin"

export TERM=xterm-256color
export EDITOR='vim'

# Aliases
alias so='web_search duckduckgo \!so'
alias fig='docker-compose'
alias sshaws="ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"

# Vi command line
bindkey -v
export KEYTIMEOUT=1

# Timeout on linux ssh
export TMOUT=0
